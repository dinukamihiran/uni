						</li>
						<li>
							<a href="/privacy">Privacy</a>
						</li>
					</ul>

				</div>
			</div>
		</div>

		<div id="global_navigations_div" class="wrapper">
			<div class="navigation_buttons">
				add any
			</div>

		</div>
		<hr />

		<div class="wrapper" style="margin-bottom: 50px;">
			<% if flash[:message] %>
			<div class="alert">
				<label style="color: red">Message: <%= flash[:message]%></label>
			</div>
			<% end %>
			<%= yield %>
		</div>

	</body>
</html>

