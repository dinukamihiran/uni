
		<div data-role="page" id="page1">
			<div id="mobi_header" data-theme="c" data-role="header" data-position="fixed">
				<h4> SiS Mobile </h4>
			</div>

			<div data-role="content">

				<%= form_for resource, :as => resource_name, :url => session_path(resource_name) ,html: {class: "form-horizontal","data-ajax"=>"false"}  do |f| %>
					<div data-role="fieldcontain">
						<%= f.label :registration_number %>
						<%= f.text_field :registration_number, :autofocus => true, placeholder: "Index number" %>
						
						<%= f.label :password %>
						<%= f.password_field :password, placeholder: "Password" %>
                                  
                               <% if devise_mapping.rememberable? -%>
                                        <%= f.check_box :remember_me %>
                                        <%= f.label :remember_me %>
                                <% end %>
						
					</div>
					<%= submit_tag "Log in" %>
				<% end %>

			</div>

			<div data-theme="b" data-role="footer" data-position="fixed">
				<h1> Developer preview </h1>
			</div>
		</div>
